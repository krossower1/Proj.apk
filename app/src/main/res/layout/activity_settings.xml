<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/green_background">

    <!-- Nagłówek -->
    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ustawienia"
        android:textColor="@color/green_text"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/settingsOptions"
        app:layout_constraintVertical_bias="0.1"/>

    <!-- Lista opcji ustawień -->
    <LinearLayout
        android:id="@+id/settingsOptions"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvSettingsTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Opcja: przełącz motyw w jednym wierszu z Spinnerem -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvOption2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Przełącz motyw"
                android:textSize="20sp"
                android:textColor="@color/green_text"/>

            <Spinner
                android:id="@+id/spinnerTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <!-- reszta opcji -->

        <!-- Opcja: włącz powiadomienia -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvOptionNotifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Włącz powiadomienia"
                android:textColor="@color/green_text"
                android:textSize="20sp"/>

            <Switch
                android:id="@+id/switchNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zmień język"
            android:textColor="@color/green_text"
            android:textSize="20sp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/tvOption5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tryb bezpieczny"
            android:textColor="@color/green_text"
            android:textSize="20sp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/tvOption6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jednostki: Kilometry"
            android:textColor="@color/green_text"
            android:textSize="20sp"
            android:padding="12dp"/>

    </LinearLayout>

    <!-- ============ czesc nowa: bottom menu ============ -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_menu"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:itemIconSize="32dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- ============ koniec nowego ============ -->

</androidx.constraintlayout.widget.ConstraintLayout>
    <!-- ============ koniec nowej czesci // =================== -->
